{
  "name": "tatui",
  "version": "0.1.0",
  "description": "Weekly terminal Kanban board",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "tatui": "./dist/entry.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/entry.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "patch-package"
  },
  "keywords": [
    "kanban",
    "terminal",
    "tui",
    "task-management"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "patches",
    "README.md"
  ],
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "better-sqlite3": "^12.6.2",
    "clipboardy": "^5.3.0",
    "drizzle-orm": "^0.45.1",
    "env-paths": "^4.0.0",
    "ink": "^6.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "drizzle-kit": "^0.31.9",
    "patch-package": "^8.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
